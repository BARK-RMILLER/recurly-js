<!doctype html>
<html>
  <script>
    (function (window) {
      try {
        post(<%- JSON.stringify(message) %>);
      } catch (err) {
        report(err);
      } finally {
        done();
      }

      function post (msg) {
        if (isIE()) {
          var relay = findRelay();
          if (!relay) throw new Error('relay not found');
          relay.send(JSON.stringify(msg), '*');
        } else {
          window.opener.postMessage(msg, '*');
        }
      }

      function isIE () {
        var nav = window.navigator;
        return nav.appName == 'Microsoft Internet Explorer'
          || nav.userAgent.indexOf('Trident') > -1;
      }

      function findRelay () {
        var loc = window.location;
        var origin = loc.protocol + '//' + loc.host;
        var frames = window.opener.frames;

        for (var i = 0; i < frames.length; i++) {
          try {
            var frame = frames[i];
            if (frame.location.href.indexOf(origin) === 0 && frame.name.indexOf('recurly-relay-') === 0) {
              return frame;
            }
          } catch (e) {
            // missing location, cross-origin
          }
        }
      }

      function done () {
        window.close();
      }

      function report (err) {
        // TODO: report somewhere...
      }
    })(window);
  </script>
</html>
